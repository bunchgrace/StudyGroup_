<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.fsu.cs.mobile.studygroup.groupResultFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/selectView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:text="Select Group"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <Spinner
        android:id="@+id/selectGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/selectView" />

    <Button
        android:id="@+id/createGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Create Group"
        android:layout_below="@+id/selectGroup"
        android:layout_alignLeft="@+id/selectView"
        android:layout_alignStart="@+id/selectView"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <Button
        android:id="@+id/joinGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Group"
        android:layout_alignBaseline="@+id/createGroup"
        android:layout_alignBottom="@+id/createGroup"
        android:layout_toRightOf="@+id/createGroup"
        android:layout_toEndOf="@+id/createGroup"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />
</RelativeLayout>
